mixin toggle (props)
    - props = props || {}
    - var {title = '', str=[]} = props
    .toggle
        - if (title != '')
            h3.label.label_position_button= title
        each val in str
            .toggle__item
                label
                    if (index == 0 && str.length > 1)
                        input(type="checkbox" checked)
                    else
                        input(type="checkbox")
                    span.toggle__icon
                    span.body= val
