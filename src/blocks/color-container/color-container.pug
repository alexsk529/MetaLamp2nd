mixin color-container(title, color, opacity)
    if opacity === ""
        div(class=`color-container__box color-container_color_${color}-100`)
    else
        div(class=`color-container__box color-container_color_${color}-${opacity}`)
    if opacity === ""
        h2.
            #{title} <br>#[span(class="color-container__span") ##{color}]

    else
        h2.
            #{title} #{opacity}% #[span(class="color-container__span") ##{color}]