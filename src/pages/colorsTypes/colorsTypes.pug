include ../../pug/_image
include ../../blocks/colorsContent/colorsContent

doctype html
html
    head
        meta(charset='UTF-8')
        title Colors&Types
    body
        header.uiKit.uiKit__header
            +image('logo','uiKit__logo')
        .colorsContent
            .colorsContent__color-container
                +color-container('Dark Shade', '1F2041', 100)
                +color-container('Dark Shade', '1F2041', 75)
                +color-container('Dark Shade', '1F2041', 50)
                +color-container('Dark Shade', '1F2041', 25)
                +color-container('Dark Shade', '1F2041', 5)
                +color-container('Purple', 'BC9CFF', "")
                +color-container('Green', '6FCF97', "")
            .colorsContent__text-container
                .colorsContent__small-block
                    h1.widget H1
                .colorsContent__big-block
                    h1.widget This one is the sub-section or widget line
                .colorsContent__small-block
                    h2.widgetInside H2
                .colorsContent__big-block
                    h2.widgetInside Next one is the item title inside widgets
                .colorsContent__small-block
                    h3.widgetInside H3
                .colorsContent__big-block
                    h3.widgetInside this is a label or cta text
                .colorsContent__small-block
                    p.body body
                .colorsContent__big-block
                    p.body This is the body text which is used for most of the design, like paragraphs, lists, etc.


