include ../../pug/_image
include ../../libs/_libs.pug

doctype html

html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="keywords")
        meta(name="description" content="Main Elements")
        meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
        title Form Elements
    body.form
        header.uiKit.uiKit__header
            +image('svg','logo','uiKit__logo')
        main.form__content
            .form__Block
                .form__uBlock
                    .form__text-field
                        +text-field({
                            labelmain:"text field",
                            label: "default",
                            type: "Email",
                            placeholder: "Email"
                        })
                    .form__text-field
                        +text-field({
                            labelmain: "text field",
                            label: "hover/focus",
                            type: "text",
                            value: "This is pretty awesome"
                        })
                    .wrapper.form__dropdown
                        +iqdropdown({
                            id1: 'Взрослые',
                            id2: 'Дети',
                            id3: 'Младенцы',
                            label: 'dropdown',
                            content: 'guests',
                        })
                    .masked-text-field.form__masked-text
                            h3.label.label_position_text-field masked text field
                            input.masked-text-field__field(type="text").item
                    .form__date-dropdown
                        +date-dropdown('date dropdown', 'date dropdown')
                    .form__date-dropdown
                        +filter-date-dropdown('filter date dropdown')
                    +subscription-text-field('subscription text field', 'Email')
                .form__uBlock
                    .form__buttons
                        +checkbox({
                            title: 'checkbox buttons',
                            str: ['Можно курить','Можно с питомцами/checked','Можно пригласить гостей (до 10 человек)/checked']
                        })
                    .form__radio-buttons
                        +radio-buttons({
                            title: 'radio buttons',
                            str: ['Мужчины', 'Женщины'],
                        })
                    .form__toggle
                        +toggle({
                            title: 'toggle',
                            str: ['Получать спецпредложения', 'Получать спецпредложения']
                        })
                    .wrapper.form__buttons
                        h3.label.label_position_button= 'like button'
                        +like-button
                        +like-button
                    .wrapper
                        h3.label.label_position_button= 'rate button'
                        +rate-button(4)
                        +rate-button(5)
                .form__uBlock
                    .form__buttons
                        +slider()
                    .wrapper.wrapper__buttons.wrapper_width_narrow.form__buttons
                        h3.label.label_position_button= 'buttons'
                        .wrapper__button-item
                            +button({
                                title: 'click me',
                                className: 'button_style_solid click-me',
                            })
                        .wrapper__button-item
                            +button({
                                title: 'click me',
                                className: 'button_style_solid button_style_op-50 click-me',
                            })
                        .wrapper__button-item
                            +button({
                                title: 'click me',
                                className: 'button_style_border click-me',
                            })
                        .wrapper__button-item
                            +button({
                                title: 'click me',
                                className: 'button_style_border button_style_op-50 click-me',
                            })
                        .wrapper__button-item
                            +button({
                                title: 'click me',
                                className: 'button_style_border button_style_without-border',
                            })
                        .wrapper__button-item
                            +button({
                                title: 'click me',
                                className: 'button_style_without-border button_style_gray',
                            })
                        +button({
                            title: 'перейти к оплате',
                            isArrow: true,
                            className: 'button_style_solid payment-button',
                        })
                    +pagination({
                        title: 'pagination'
                    })
            .form__Block
                .form__uBlock
                    .wrapper.form__dropdown.wrapper_width_narrow
                        +iqdropdown({
                            id1: 'Спальни',
                            id2: 'Кровати',
                            id3:  'Ванные комнаты',
                            label:  'dropdown',
                            className:  'iqdropdown_width_narrow',
                            description: 'default',
                            content: 'rooms',
                        })
                    .wrapper.wrapper_width_narrow
                        +iqdropdown({
                            id1: 'спальни',
                            id2: 'кровати',
                            id3: 'ванные комнаты',
                            label: 'dropdown',
                            className: 'iqdropdown_width_narrow',
                            description: 'expanded',
                            content: 'rooms',
                        })
                .form__uBlock
                    .wrapper.form__dropdown
                        +iqdropdown({
                            id1: 'Взрослые',
                            id2: 'Дети',
                            id3: 'Младенцы',
                            label: 'dropdown',
                            content: 'guests',
                        })
                .form__uBlock
                    .wrapper.form__dropdow
                        +iqdropdown({
                            id1: 'Взрослые',
                            id2: 'Дети',
                            id3: 'Младенцы',
                            label: 'dropdown',
                            content: 'guests',
                        })
            .form__Block
                .form__uBlock
                    +expandable-checkbox({
                        items: ['Завтрак', 'Письменный стол', 'Стул для кормления', 'Кроватка', 'Телевизор', 'Шампунь']
                    })
                    +expandable-checkbox({
                        items: ['Завтрак', 'Письменный стол/checked', 'Стул для кормления/checked', 'Кроватка/checked', 'Телевизор', 'Шампунь']
                    })
                .form__uBlock
                    +rich-checkbox({
                        str: ['Широкий коридор/Ширина коридоров в номере не менее 91 см.',
                            'Помощник для инвалидов/На 1 этаже вас встретит специалист и проводит до номера']
                    })
                .form__uBlock
                    +bullet-list({
                        str: ['Нельзя с питомцами',
                            'Без вечеринок и мероприятий',
                            'Время прибытия - после 13:00, а выезд до 12:00']
                    })
            .form__Block
                .form__uBlock
                    .form__icon
                        +icon('insert_emoticon/Комфорт/Шумопоглощающие стены')
                    .form__icon
                        +icon('location_city/Удобство/Окно в каждой из спален')
                .form__doubleUBlock
                    +review({
                        picture: 'person1',
                        name: 'Мурад Сарафанов',
                        time: '5 дней назад',
                        text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
                    })
        footer.uiKit.uiKit__footer
            .allowance
            .review

