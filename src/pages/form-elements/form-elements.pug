doctype html

html

    head
        meta(charset='UTF-8')
        title Form Elements
    body.form
        header.uiKit.uiKit__header
            +image('logo','uiKit__logo')
        main.form__content
            .form__1stBlock
                .form__uBlock
                    +text-field("text field", "default", "Email", "Email", "")
                    +text-field("text field", "hover/focus", "text", "", "This is pretty awesome")
                    +iqdropdown('adults', 'children', 'infants', 'dropdown')
                    .masked-text-field
