                            input.masked-text-field__field(type="text").item
                    +date-dropdown('date dropdown')
                    +filter-date-dropdown('filter date dropdown')
                    +subscription-text-field('subscription text field', 'Email')
                .form__uBlock
                    input.checkbox
                    input.radio-buttons
                    input.toggle
                    .form__like-buttons
                        input.like-button
                        input.like-button
                    .form__rate-buttons
                        input.rate-button
                        input.rate-button
                .form__uBlock
                    input.range-slider
                    .form__click-buttons
                        input.click-button
                        input.click-button
                        input.click-button
                        input.click-button
                        input.click-button
                        input.click-button
                        input.click-button
                    input.pagination
            .form__2ndBlock
                .form__uBlock
                .form__uBlock
                .form__uBlock
            .form__3rdBlock
                .form__uBlock
                .form__uBlock
                .form__uBlock
        footer.uiKit.uiKit__footer
            .allowance
            .review
