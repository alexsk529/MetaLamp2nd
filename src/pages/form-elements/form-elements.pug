include ../../pug/_image
include ../../blocks/text-field/text-field
include ../../blocks/iqdropdown/iqdropdown
include ../../blocks/date-dropdown/date-dropdown
include ../../blocks/filter-date-dropdown/filter-date-dropdown
include ../../blocks/subscription-text-field/subscription-text-field
include ../../blocks/checkbox-buttons/checkbox-buttons
include ../../blocks/radio-buttons/radio-buttons
include ../../blocks/toggle/toggle
include ../../blocks/like-button/like-button
include ../../blocks/rate-button/rate-button
include ../../blocks/slider/slider
include ../../blocks/button/button

doctype html

html

    head
        meta(charset='UTF-8')
        title Form Elements
    body.form
        header.uiKit.uiKit__header
            +image('logo','uiKit__logo')
        main.form__content
            .form__1stBlock
                .form__uBlock
                    +text-field({
                        labelmain:"text field",
                        label: "default",
                        type: "Email",
                        placeholder: "Email"
                    })
                    +text-field({
                        labelmain: "text field",
                        label: "hover/focus",
                        type: "text",
                        value: "This is pretty awesome"
                    })
                    +iqdropdown({
                        id1: 'adults',
                        id2: 'children',
                        id3: 'infants',
                        label: 'dropdown'
                    })
                    .masked-text-field
                            h3.label masked text field
                            input.masked-text-field__field(type="text").item
                    +date-dropdown('date dropdown')
                    +filter-date-dropdown('filter date dropdown')
                    +subscription-text-field('subscription text field', 'Email')
                .form__uBlock
                    +checkbox({
                        title: 'checkbox buttons',
                        str: ['Можно курить','Можно с питомцами','Можно пригласить гостей (до 10 человек)']
                    })
                    +radio-buttons({
                        title: 'radio buttons',
                        str: ['Мужчины', 'Женщины'],
                    })
                    +toggle({
                        title: 'toggle',
                        str: ['Получать спецпредложения', 'Получать спецпредложения']
                    })
                    .wrapper
                        h3.title.label= 'like button'
                        +like-button
                        +like-button
                    .wrapper
                        h3.title.label= 'rate button'
                        +rate-button
                        +rate-button
                .form__uBlock
                    +slider()
                    .wrapper.wrapper__buttons
                        h3.title.label= 'buttons'
                        +button({
                            title: 'click me',
                            className: 'button_style_solid click-me',
                        })
                        +button({
                            title: 'click me',
                            className: 'button_style_solid button_style_op-50 click-me',
                        })
                        +button({
                            title: 'click me',
                            className: 'button_style_border click-me',
                        })
                        +button({
                            title: 'click me',
                            className: 'button_style_border button_style_op-50 click-me',
                        })
                        +button({
                            title: 'click me',
                            className: 'button_style_border button_style_without-border',
                        })
                        +button({
                            title: 'click me',
                            className: 'button_style_without-border button_style_gray',
                        })
                        +button({
                            title: 'перейти к оплате',
                            isArrow: true,
                            className: 'button_style_solid payment-button click-me',
                        })
                        input.click-button
                        input.click-button
                        input.click-button
                        input.click-button
                        input.click-button
                        input.click-button
                    input.pagination
            .form__2ndBlock
                .form__uBlock
                .form__uBlock
                .form__uBlock
            .form__3rdBlock
                .form__uBlock
                .form__uBlock
                .form__uBlock
        footer.uiKit.uiKit__footer
            .allowance
            .review

